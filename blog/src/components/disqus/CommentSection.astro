---
export interface Props {
    slug: string;
}
const { slug } = Astro.props;
const currentUrl = Astro.url;
const disqusRender = `
<div id="disqus_thread"></div>
<script>

    var disqus_config = function () {
        this.page.url = "${currentUrl}";  // Replace PAGE_URL with your page's canonical URL variable
        this.page.identifier = "${slug}"; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
    };

    (function() { // DON'T EDIT BELOW THIS LINE
    var d = document, s = d.createElement('script');
    s.src = 'https://jenueldev.disqus.com/embed.js';
    s.setAttribute('data-timestamp', +new Date());
    (d.head || d.body).appendChild(s);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
`;
---

<div class="pt-6" set:html={disqusRender} />

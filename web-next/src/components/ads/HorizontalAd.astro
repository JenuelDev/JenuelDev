---
// @ts-nocheck
export interface Props {
    adSlot: string;
}
const { adSlot } = Astro.props;

const renderAsHtml = `<script
    async
    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2268807726840190"
    crossorigin="anonymous"></script>
<!-- Ads Horizontal -->
<ins
    class="adsbygoogle"
    style="display:block"
    data-ad-client="ca-pub-2268807726840190"
    data-ad-slot="${adSlot}"
    data-ad-format="auto"
    data-full-width-responsive="true"></ins>
<script>
    // @ts-nocheck
    (adsbygoogle = window.adsbygoogle || []).push({});
</script>
<script></script>`;
---

<div set:html={renderAsHtml} />

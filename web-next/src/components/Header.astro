---
import { Icon } from "astro-icon/components";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav class="sticky top-0 w-full z-9999 bg-white bg-opacity-30 backdrop-blur-md p-3">
    <div class="flex items-center justify-between mx-auto">
        <a href="/" class="text-18px w-200px">
            <span>Jenuel</span><span class="font-800">Dev</span>
        </a>
        <div class="gap-3 flex">
            <a
                href="/"
                class={currentPath === ""
                    ? "bg-[var(--c-blue-500)] text-white px-2 rounded-md"
                    : ""}
                class=""
            >
                Home
            </a>
            <a
                href="/blog"
                class={currentPath === "blog"
                    ? "bg-[var(--c-blue-500)] text-white px-2 rounded-md"
                    : ""}
            >
                Blog
            </a>
        </div>
        <div class="gap-3 items-center sm:flex hidden">
            <a
                class="group inline-block rounded-full bg-white border-2 border-[var(--c-blue-500)] px-3 scale-100 hover:scale-103 transition-all"
                href="https://jenueldev.gumroad.com/"
                target="_blank"
                title="Linkedin"
                aria-label="Linkedin"
            >
                <span
                    class="block rounded-full px-1 py-0.5 text-sm font-medium group-hover:bg-transparent scale-100 hover:scale-103 transition-all"
                >
                    <Icon name="CarbonConnect" class="inline text-lg" />
                    <span class="xs:inline hidden">Lets Connect</span>
                </span>
            </a>
            <!-- Youtube Link -->
            <a
                class="group inline-block rounded-full bg-white"
                href="https://youtube.com/@jenueldev"
                target="_blank"
                title="Youtube"
                aria-label="Youtube"
            >
                <Icon name="tabler:brand-youtube-filled" class="inline -mt-1 size-6" />
            </a>
            <a
                class="group inline-block rounded-full bg-white"
                href="https://store.jenuel.dev"
                target="_blank"
                title="Store"
                aria-label="Store"
            >
                <Icon name="tabler:building-store" class="inline -mt-1 size-6" />
            </a>
        </div>
    </div>
</nav>

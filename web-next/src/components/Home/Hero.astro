---
import ProfileImage from "../../assets/images/profile.jpg";
export const prerender = true;
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import JenuelDevImageProfileBrand from "./../../assets/images/JenuelDev.png";
---

<section
    style="width: 100%; max-width: 800px; padding-top: 2.5rem; margin-left: auto; margin-right: auto;"
>
    <div class="flex sm:flex-row flex-col items-center sm:gap-10 gap-4 m-2">
        <div class="h-200px w-200px relative group">
            <div
                class="rounded-full overflow-hidden flex items-center relative justify-center w-200px h-200px border-5 border-slate-200 group-hover:border-slate-300"
            >
                <Image
                    src={JenuelDevImageProfileBrand}
                    width={200}
                    class="absolute scale-110 group-hover:scale-115"
                    alt="Jenuel"
                    loading={"eager"}
                />
            </div>
            <div
                class="w-30px h-30px bg-slate-950 absolute rounded-full bottom-6px right-5 group-hover:bg-slate-300 transition-all text-2xl flex items-center justify-center text-slate-50 group-hover:text-slate-950"
            >
                <Icon name="CarbonCode" />
            </div>
            <div
                class="w-20px h-20px bg-slate-500 absolute rounded-full bottom-28px right-2 group-hover:bg-slate-950 transition-all"
            >
            </div>
        </div>
        <div class="sm:text-align-left text-center w-full">
            <h3 class="md:text-3xl sm:text-2xl text-1xl">
                hi! I'm <span class="font-bold">Jenuel</span>
            </h3>
            <h1
                class="font-700 tracking-tight md:text-5xl sm:text-4xl text-3xl group text-[var(--c-blue-500)]"
            >
                Software <span class="underline">Developer</span>
            </h1>
            <p class="sm:mt-4 mt-1 sm:max-w-xs sm:text-lg text-md leading-normal mr-auto mb-2">
                I build web apps that are engaging, accessible and scalable.
            </p>
            <div class="flex sm:gap-3 gap-2 flex-row flex-wrap sm:justify-start justify-center">
                <a
                    href="https://www.linkedin.com/in/jenuelganawed/"
                    class="bg-[var(--c-blue-500)] border-2 border-[var(--c-blue-500)] text-white rounded-3xl sm:px-4 sm:py-2 px-2 py-1 flex items-center gap-1 hover:bg-white transition-all hover:text-[var(--c-blue-500)] max-w-200px sm:text-lg text-sm"
                >
                    <Icon name="CarbonConnect" /> Let's Connect
                </a>
                <a
                    href="/blog"
                    class="bg-[var(--c-blue-500)] border-2 border-[var(--c-blue-500)] rounded-3xl sm:px-4 sm:py-2 px-2 py-1 flex items-center gap-1 bg-white transition-all text-[var(--c-blue-500)] max-w-200px sm:text-lg text-sm"
                >
                    <Icon name="TablerArticleFilledFilled" /> Blog
                </a>
                <div
                    onclick="window.open('/Jenuel Ganawed - Resume.pdf'); return false;"
                    class="bg-[var(--c-blue-500)] border-2 border-[var(--c-blue-500)] rounded-3xl sm:px-4 sm:py-2 px-2 py-1 flex items-center gap-1 bg-white transition-all text-[var(--c-blue-500)] max-w-200px sm:text-lg text-sm cursor-pointer"
                >
                    <Icon name="tabler:file-type-pdf" /> Resume
                </div>
            </div>
        </div>
    </div>
</section>

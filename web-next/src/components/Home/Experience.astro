---
import { Icon } from "astro-icon/components";

interface ExperienceItem {
    company?: string;
    icon: string;
    descriptions: string;
    comment?: string;
    iconColor?: "energy-icon" | "blue-icon" | "faded-icon";
}

const timeline: Array<ExperienceItem> = [
    {
        icon: "CarbonBatteryCharging",
        descriptions: '"do good and good will come to you."',
        iconColor: "energy-icon",
    },
    {
        company: "VOCPhone",
        icon: "CarbonRadioPushToTalk",
        iconColor: "blue-icon",
        descriptions:
            'settled in <a href="https://vocphone.com/" class="text-[var(--c-grey-500)] hover:text-[var(--c-blue-500)]"> <strong> VOCPhone </strong> </a> as a <span class="font-600"> üßë‚Äçüíª Senior Software Developer</span> on <span class="whitespace-nowrap">Nov 2021 - <span class="text-[var(--c-blue-500)] font-900">Present</span></span>',
    },
    {
        icon: "CarbonVehicleInsights",
        descriptions:
            'went to <a href="https://www.revdojo.com/" class="text-[var(--c-grey-500)] hover:text-[var(--c-blue-500)]"> <strong> Webinarinc </strong> </a> as a <span class="font-600"> üòä Software Developer</span> on <span class="whitespace-nowrap">Mar 2021 - Nov 2021</span>',
    },
    {
        icon: "CarbonChat",
        descriptions:
            'jumped to <a href="https://www.linkedin.com/company/utalk-tutorial-services/" class="text-[var(--c-grey-500)] hover:text-[var(--c-blue-500)]"> <strong> UTalk </strong> </a> as a <span class="font-600"> üòÅ Software Developer</span> on <span class="whitespace-nowrap">Aug 2019 - Apr 2021</span>',
        comment: "focused working on a project related to learning management systems.",
    },
    {
        icon: "MaterialSymbolsFastfoodSharp",
        descriptions:
            'moved to <a href="https://www.facebook.com/p/Dap-ayan-Food-Corporation-100057698281360/" class="text-[var(--c-grey-500)] hover:text-[var(--c-blue-500)]"> <strong> Dap-ayan Eatery </strong> </a> as a <span class="font-600"> üåç Web Developer</span> on <span class="whitespace-nowrap">Aug 2018 - May 2019</span>',
        comment: "starting to use tools that I've learned in a proper way.",
    },
    {
        icon: "CarbonThumbsUpFilled",
        descriptions:
            'started working in <a href="https://www.facebook.com/ilearnsda/" class="text-[var(--c-grey-500)] hover:text-[var(--c-blue-500)]"> <strong> Ilearn Skills Development Academy </strong> </a> as a üé® <span class="font-600"> Designer Web Programmer </span> on <span class="whitespace-nowrap"> Aug 2018 - Dec 2018 </span>',
        comment:
            "my first experience using what I learned from school. And I realize it's not enough, so I learned to solo learn.",
    },
    {
        icon: "Fa6SolidUserGraduate",
        iconColor: "blue-icon",
        descriptions:
            'graduated from <a href="https://kcp.edu.ph/" class="text-[var(--c-grey-500)] hover:text-[var(--c-blue-500)]"> <strong>Kings College of the Philippines </strong> </a> on May 2019',
        comment:
            "Majored in Web Technology, and had been creating projects related to web programming and actively participating in events, seminars, and competitions.üòä",
    },
];
---

<ol
    class="w-8/10 max-w-700px mx-auto border-l-2 border-gray-2 pt-8 pr-0 pb-8 pl-8 flex flex-col mb-10"
>
    {
        timeline.map((item: ExperienceItem) => (
            <li class="timeline-item">
                <span class={`timeline-item-icon | ${item.iconColor ?? "faded-icon"}`}>
                    <Icon name={item.icon} />
                </span>
                <div class="timeline-item-wrapper">
                    <div class="timeline-item-description">
                        <span class="sm:text-lg text-md" set:html={item.descriptions} />
                    </div>
                    {item.comment && (
                        <div class="comment">
                            <p class="sm:text-md text-sm" set:html={item.comment} />
                        </div>
                    )}
                </div>
            </li>
        ))
    }
</ol>

<style lang="scss">
    .timeline-item {
        display: flex;
        gap: 24px;
        & + * {
            margin-top: 24px;
        }
    }

    .timeline-item-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-left: -52px;
        flex-shrink: 0;
        overflow: hidden;
        box-shadow: 0 0 0 6px #fff;
        svg {
            width: 20px;
            height: 20px;
        }

        &.faded-icon {
            background-color: var(--c-grey-100);
            color: var(--c-grey-400);
        }

        &.blue-icon {
            background-color: var(--c-blue-500);
            color: #fff;
        }

        &.energy-icon {
            background-color: var(--c-energy-500);
            color: #fff;
        }

        &.filled-icon {
            background-color: var(--c-blue-500);
            color: #fff;
        }
    }

    .timeline-item-description {
        display: flex;
        padding-top: 6px;
        gap: 8px;
        color: var(--c-grey-400);

        img {
            flex-shrink: 0;
        }

        a {
            color: var(--c-grey-500);
            font-weight: 500;
            text-decoration: none;

            &:hover,
            &:focus {
                outline: 0;
                color: var(--c-blue-500);
            }
        }
    }

    .comment {
        margin-top: 12px;
        color: var(--c-grey-500);
        border: 1px solid var(--c-grey-200);
        box-shadow: 0 4px 4px 0 var(--c-grey-100);
        border-radius: 6px;
        padding: 16px;
    }
</style>
